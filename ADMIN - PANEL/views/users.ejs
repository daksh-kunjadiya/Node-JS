<h1>Users</h1>
<a href="/admin/users/new">Add New User</a>
<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.role %>
                </td>
                <td>
                    <%= new Date(user.createdAt).toLocaleDateString() %>
                </td>
                <td>
                    <a href="/admin/users/<%= user._id %>/edit">Edit</a>
                    <form method="POST" action="/admin/users/<%= user._id %>/delete" style="display:inline;">
                        <button type="submit" onclick="return confirm('Delete?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>