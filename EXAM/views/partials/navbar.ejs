<nav class="culinary-navbar">
  <div class="nav-container">
    <div class="nav-brand">
      <h1>🍳 Recipe Haven</h1>
    </div>
    
    <div class="nav-links">
      <% if (user) { %>
        <a href="/recipes" class="nav-link">
          <i class="icon">📚</i> All Recipes
        </a>
        <a href="/recipes/my" class="nav-link">
          <i class="icon">👨‍🍳</i> My Recipes
        </a>
        <a href="/recipes/new" class="nav-link create-btn">
          <i class="icon">➕</i> Create Recipe
        </a>
        
        <div class="user-menu">
          <div class="user-info">
            <span class="user-name">👋 <%= user.username %></span>
            <% if (user.role === 'admin') { %>
              <span class="admin-badge">👑 Admin</span>
            <% } %>
          </div>
          <form action="/auth/logout" method="POST" class="logout-form">
            <button type="submit" class="logout-btn">
              <i class="icon">🚪</i> Logout
            </button>
          </form>
        </div>
      <% } else { %>
        <a href="/auth/login" class="nav-link">Login</a>
        <a href="/auth/register" class="nav-link">Register</a>
      <% } %>
    </div>
  </div>
